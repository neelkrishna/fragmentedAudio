<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

    <ImageButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/record" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bigplay"
        android:layout_toRightOf="@id/record_button"
        android:layout_gravity="top" />
    
    <ImageButton
        android:id="@+id/stop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bigstop"
        android:layout_toRightOf="@id/record_button"
        android:layout_gravity="top" />

    <EditText
        android:id="@+id/title_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_button"
        android:layout_centerHorizontal="true"
        android:ems="10" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title_text"
        android:layout_alignBottom="@+id/title_text"
        android:layout_toLeftOf="@+id/title_text"
        android:text="Title: " />

    <Button
        android:id="@+id/keep_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Keep" />

</RelativeLayout>