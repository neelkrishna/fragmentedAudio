<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content" 
  android:id="@+id/item_relative_layout"
  android:clickable="true">
  
  <ImageButton android:id="@+id/list_stop_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:src="@drawable/stop"
    android:padding="4dp" />  
  <ImageButton android:id="@+id/list_play_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:src="@drawable/play"
    android:layout_toLeftOf="@id/list_stop_button"
    android:padding="4dp" />
  <ImageButton
      android:id="@+id/list_trash_button"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentLeft="true"
      android:src="@drawable/trashy" />
  
  <TextView
      android:id="@+id/audio_item_titleTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/list_trash_button"
      android:text="Title"
      android:fontFamily="sans-serif-light"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/audio_item_dateTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/audio_item_titleTextView"
      android:layout_toRightOf="@id/list_trash_button"
      android:paddingLeft="4dp"
      android:paddingRight="4dp"
      android:paddingTop="4dp"
      android:fontFamily="sans-serif-light"
      android:text="Date" />

  

</RelativeLayout>